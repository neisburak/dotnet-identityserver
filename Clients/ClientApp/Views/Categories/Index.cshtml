@model List<Category>
@{
    ViewData["Title"] = "Categories";
}

<h3>Categories</h3>
<hr>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Created Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.CreatedOn.ToString("dd.MM.yyyy")</td>
            </tr>
        }
    </tbody>
</table>
